<!DOCTYPE html>
<html>
<head>
  <title>Blurgh</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:alert] %>
<%= flash[:notice] %>

<% if session[:user_id] %>
  <p>You are logged in as: <%= User.find(session[:user_id]).name %> | <%= link_to "Log out", log_out_path %></p>

<% end %>

<%= yield %>

</body>
</html>
