<h1><%= @post.title %></h1>
<h4>Created at: <%= @post.created_at %></h4>
<p><%= @post.text %></p>

<h4 id="comment_link"><%= link_to "Add a new comment", new_post_comment_path(@post), remote: true %></h4>
<div id="comment_form" style="display:none;">
  <%= render 'comments/form' %>
</div>

  <ul id="comment_list">
  <% @comments.each do |comment| %>
    <%= render comment %>
  <% end %>
  </ul>
